
//-
	типовый шаблон страниц

include ../helpers/_variables
include ../helpers/_mixing
block variables
	- page.type = 'page';
doctype html
html( lang="ru" )
	include ../parts/_head
	block head
	block body
		body( class=page.type )
			block wrapper
				.wrapper#wrapper
					.panel
						header.wrapper__item.item--header.header#header
							block header
								include ../parts/_header
						nav.wrapper__item.item--nav.nav#nav
							block header
								include ../parts/_nav
					main.wrapper__item.item--main.main.lazy#main
						block main
					footer.wrapper__item.item--footer.footer#footer
						block footer
							include ../parts/_footer
			block enqueue
				include ../parts/_enqueue